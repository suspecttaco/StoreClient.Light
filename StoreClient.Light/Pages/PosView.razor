@using System.Globalization

<div class="pos-container animate__animated animate__fadeIn">
    
    <div class="catalog-section">
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" 
                   class="search-input" 
                   placeholder="Buscar producto por nombre o código..." 
                   @bind="searchQuery" 
                   @oninput="HandleSearch"
                   autofocus />
        </div>

        <div class="product-list">
            @if (isLoading)
            {
                <div class="d-flex justify-content-center w-100 pt-5">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            }
            else if (filteredProducts.Count == 0)
            {
                <div class="text-center w-100 pt-5 text-muted">
                    <i class="bi bi-box2 fs-1 mb-2 d-block opacity-50"></i>
                    No se encontraron productos.
                </div>
            }
            else
            {
                @foreach (var p in filteredProducts)
                {
                    <div class="product-card" @onclick="() => AddToCart(p)">
                        <div class="prod-name">@p.Name</div>
                        
                        <div class="prod-meta">
                            <span class="prod-stock">Stock: @p.Stock</span>
                            <span class="prod-price">@p.SellPrice.ToString("C2", CultureInfo.CurrentCulture)</span>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <div class="ticket-section">
        
        <div class="ticket-header">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <label class="small fw-bold text-muted text-uppercase" style="letter-spacing: 0.5px;">Cliente</label>
        
                <button class="btn btn-link btn-sm p-0 text-decoration-none fw-bold" 
                        style="font-size: 0.85rem;" 
                        @onclick="CreateFastClient">
                    <i class="bi bi-plus-circle me-1"></i>Nuevo
                </button>
            </div>
    
            <CustomerSelector 
                Customers="@customers" 
                @bind-SelectedId="selectedCustomerId" />
        </div>
        
        <div class="ticket-body">
            @if (cart.Count == 0)
            {
                <div class="h-100 d-flex align-items-center justify-content-center text-muted flex-column opacity-50">
                    <i class="bi bi-cart3 fs-1 mb-3"></i>
                    <span>El ticket está vacío</span>
                    <small>Escanea o selecciona productos</small>
                </div>
            }
            else
            {
                @foreach (var item in cart)
                {
                    <div class="cart-item">
                        <div class="item-name" title="@item.ProductName">
                            @item.ProductName
                        </div>
                        
                        <div>
                            <input type="number" class="qty-control" 
                                   value="@item.Amount" 
                                   @onchange="(e) => UpdateQuantity(item, e)" />
                        </div>

                        <div class="item-total">
                            @item.Subtotal.ToString("N2")
                        </div>

                        <button class="btn btn-link text-danger p-0 ms-2" @onclick="() => RemoveFromCart(item)">
                            <i class="bi bi-trash3"></i>
                        </button>
                    </div>
                }
            }
        </div>

        <div class="ticket-footer">
            <div class="total-row">
                <span class="total-label">Total a Pagar</span>
                <span class="total-amount">@TotalToPay.ToString("C2", CultureInfo.CurrentCulture)</span>
            </div>

            <button class="btn-pay" @onclick="HandleCheckout" disabled="@(cart.Count == 0 || isPaying)">
                @if (isPaying) 
                { 
                    <span class="spinner-border spinner-border-sm me-2"></span> 
                    <span>PROCESANDO...</span> 
                } 
                else 
                { 
                    <span><i class="bi bi-credit-card me-2"></i> COBRAR</span> 
                }
            </button>
        </div>
    </div>
</div>

<ReceiptModal 
    IsVisible="@showReceipt" 
    Title="@modalTitle" 
    Content="@modalMessage" 
    IsError="@isErrorModal"
    OnClose="OnModalClosed" />
    
<CustomerDetailModal
    @bind-IsVisible="showCustomerModal"
    OnSaved="OnCustomerSaved"/>