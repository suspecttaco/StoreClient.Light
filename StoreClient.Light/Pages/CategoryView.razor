

<div class="view-container animate__animated animate__fadeIn">
    
    <div class="d-flex justify-content-between align-items-end mb-2">
        <div>
            <h4 class="fw-bold text-dark m-0">Catálogo de Categorías</h4>
            <small class="text-muted">Organiza tus productos</small>
        </div>
    </div>

    <div class="toolbar">
        <div class="search-box">
            <i class="bi bi-search text-muted"></i>
            <input type="text" class="search-input" placeholder="Buscar categoría..." 
                   @bind="searchQuery" @oninput="HandleSearch" />
        </div>

        <div class="d-flex align-items-center gap-3">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="chkCat" 
                       checked="@showInactive" @onchange="ToggleInactive">
                <label class="form-check-label small text-muted" for="chkCat">Inactivos</label>
            </div>

            <button class="btn btn-primary d-flex align-items-center gap-2" @onclick="OpenCreate">
                <i class="bi bi-plus-lg"></i>
                <span>Nueva</span>
            </button>
        </div>
    </div>

    <div class="table-container">
        @if (isLoading)
        {
            <div class="d-flex justify-content-center align-items-center h-100 p-5">
                <div class="spinner-border text-primary" role="status"></div>
            </div>
        }
        else if (filteredCategories.Count == 0)
        {
            <div class="text-center p-5 text-muted">
                <i class="bi bi-tags fs-1 d-block mb-2 opacity-50"></i>
                No hay categorías registradas.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in filteredCategories)
                        {
                            <tr style="@(!item.Active ? "opacity: 0.6; background: #f9fafb;" : "")">
                                <td class="text-muted">#@item.Id</td>
                                <td class="fw-bold">
                                    @item.Name
                                    @if (!item.Active) { <span class="badge bg-secondary ms-2">Inactiva</span> }
                                </td>
                                <td class="text-muted">
                                    @(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)
                                </td>

                                <td class="text-end">
                                    <button class="btn-icon me-1" title="Editar" @onclick="() => OpenEdit(item.Id)">
                                        <i class="bi bi-pencil-fill"></i>
                                    </button>
                                    @if (item.Active)
                                    {
                                        <button class="btn-icon delete" title="Eliminar" @onclick="() => HandleDelete(item)">
                                            <i class="bi bi-trash3-fill"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<CategoryDetailModal 
    @bind-IsVisible="showModal" 
    CategoryId="selectedId" 
    OnSaved="OnModalSaved" />