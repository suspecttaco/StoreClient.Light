@using System.Globalization

<div class="dashboard-container animate__animated animate__fadeIn">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold m-0 text-dark">Resumen Operativo</h4>
            <small class="text-muted">Estadísticas de hoy</small>
        </div>
        <button class="btn btn-light btn-sm shadow-sm border" @onclick="CargarDatos">
            <i class="bi bi-arrow-clockwise me-1"></i> Actualizar
        </button>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger d-flex align-items-center shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
            <div>
                <strong>Error de carga:</strong> @errorMessage
                <br/>
                <button class="btn btn-link p-0 text-danger" @onclick="CargarDatos">Reintentar</button>
            </div>
        </div>
    }
    else if (stats != null)
    {
        <div class="kpi-grid">

            <div class="kpi-card card-sales">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="kpi-icon">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                </div>
                <div>
                    <div class="kpi-title">Ventas Hoy</div>
                    <div class="kpi-value">@stats.TotalSales.ToString("C2", CultureInfo.CurrentCulture)</div>
                </div>
            </div>

            <div class="kpi-card card-tickets">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="kpi-icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                </div>
                <div>
                    <div class="kpi-title">Transacciones</div>
                    <div class="kpi-value">@stats.SalesCount</div>
                </div>
            </div>

            <div class="kpi-card card-stock @(stats.LowStockCount > 0 ? "alert-mode" : "")">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="kpi-icon">
                        <i class="bi bi-exclamation-diamond-fill"></i>
                    </div>
                </div>
                <div>
                    <div class="kpi-title">Stock Crítico</div>
                    <div class="kpi-value">@stats.LowStockCount</div>
                </div>
            </div>

            <div class="kpi-card card-products">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="kpi-icon">
                        <i class="bi bi-box-seam"></i>
                    </div>
                </div>
                <div>
                    <div class="kpi-title">Productos Activos</div>
                    <div class="kpi-value">@stats.TotalProducts</div>
                </div>
            </div>
        </div>

        <div class="chart-placeholder-card">
            <h5 class="fw-bold text-secondary mb-4">Tendencia de Ventas</h5>

            <div class="chart-empty-state">
                <i class="bi bi-bar-chart fs-1 mb-3 text-muted opacity-50"></i>
                <span class="fw-medium">Gráfica en construcción</span>
                <small class="text-muted">Próximamente disponible</small>
            </div>
        </div>
    }
</div>