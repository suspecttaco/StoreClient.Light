@using System.Globalization

<div class="view-container animate__animated animate__fadeIn">
    
    <div class="d-flex justify-content-between align-items-end mb-2">
        <div>
            <h4 class="fw-bold text-dark m-0">Inventario General</h4>
            <small class="text-muted">Gestión de productos y precios</small>
        </div>
    </div>

    <div class="toolbar">
        <div class="search-box">
            <i class="bi bi-search text-muted"></i>
            <input type="text" class="search-input" placeholder="Buscar por nombre o código..." 
                   @bind="searchQuery" @oninput="HandleSearch" />
        </div>

        <div class="d-flex align-items-center gap-3">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="chkInv" 
                       checked="@showInactive" @onchange="ToggleInactive">
                <label class="form-check-label small text-muted" for="chkInv">Inactivos</label>
            </div>

            <button class="btn btn-primary d-flex align-items-center gap-2" @onclick="OpenCreate">
                <i class="bi bi-plus-lg"></i>
                <span>Nuevo Producto</span>
            </button>
        </div>
    </div>

    <div class="table-container">
        @if (isLoading)
        {
            <div class="d-flex justify-content-center align-items-center h-100 p-5">
                <div class="spinner-border text-primary" role="status"></div>
            </div>
        }
        else if (filteredProducts.Count == 0)
        {
            <div class="text-center p-5 text-muted">
                <i class="bi bi-box2 fs-1 d-block mb-2 opacity-50"></i>
                No se encontraron productos.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Producto</th>
                            <th>Categoría</th>
                            <th>Precio Venta</th>
                            <th>Stock</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in filteredProducts)
                        {
                            <tr style="@(!p.Active ? "opacity: 0.6; background: #f9fafb;" : "")">
                                <td class="text-muted font-monospace small">@(p.Code ?? "-")</td>
                                <td class="fw-bold">
                                    @p.Name
                                    @if (!p.Active) { <span class="badge bg-secondary ms-2" style="font-size:0.6rem">BAJA</span> }
                                </td>
                                <td>@(string.IsNullOrEmpty(p.CategoryName) ? "-" : p.CategoryName)</td>
                                <td class="fw-bold text-primary">
                                    @p.SellPrice.ToString("C2", CultureInfo.CurrentCulture)
                                </td>
                                
                                <td>
                                    @if (p.Stock <= p.MinStock)
                                    {
                                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle">
                                            @p.Stock (Bajo)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-dark">@p.Stock</span>
                                    }
                                </td>

                                <td class="text-end">
                                    <button class="btn-icon me-1" title="Editar" @onclick="() => OpenEdit(p.Id)">
                                        <i class="bi bi-pencil-fill"></i>
                                    </button>
                                    @if (p.Active)
                                    {
                                        <button class="btn-icon delete" title="Desactivar" @onclick="() => HandleDelete(p)">
                                            <i class="bi bi-archive-fill"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<ProductDetailModal 
    @bind-IsVisible="showModal" 
    ProductId="selectedProductId" 
    OnSaved="OnModalSaved" />