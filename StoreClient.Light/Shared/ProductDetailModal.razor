@if (IsVisible)
{
    <div class="modal-overlay" @onclick="Close">
        <div class="modal-card" @onclick:stopPropagation="true" style="max-width: 600px;"> <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-box-seam-fill me-2 text-primary"></i>@title
                </h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>

            <EditForm Model="@model" OnValidSubmit="HandleSave">
                <div class="modal-body">
                    <DataAnnotationsValidator />

                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <div class="form-floating">
                                <InputText id="txtCode" class="form-control" @bind-Value="model.Code" placeholder="Código" />
                                <label for="txtCode">Código</label>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <ModernSelector 
                                    Options="@categoryOptions" 
                                    @bind-SelectedId="model.CategoryId"
                                    Placeholder="-- Sin Categoría --" />
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <InputText id="txtName" class="form-control" @bind-Value="model.Name" placeholder="Nombre" />
                        <label for="txtName">Nombre del Producto *</label>
                        <ValidationMessage For="@(() => model.Name)" class="text-danger small mt-1" />
                    </div>

                    <div class="form-floating mb-3">
                        <InputTextArea id="txtDesc" class="form-control" @bind-Value="model.Description" placeholder="Desc" style="height: 70px" />
                        <label for="txtDesc">Descripción</label>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <InputNumber id="numCost" class="form-control" @bind-Value="model.BuyPrice" placeholder="Costo" />
                                <label for="numCost">Costo Compra ($)</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <InputNumber id="numPrice" class="form-control" @bind-Value="model.SellPrice" placeholder="Venta" />
                                <label for="numPrice">Precio Venta ($) *</label>
                                <ValidationMessage For="@(() => model.SellPrice)" class="text-danger small mt-1" />
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <InputNumber id="numStock" class="form-control" @bind-Value="model.Stock" placeholder="Stock" />
                                <label for="numStock">Stock Actual</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <InputNumber id="numMin" class="form-control" @bind-Value="model.MinStock" placeholder="Min" />
                                <label for="numMin">Stock Mínimo</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-check form-switch ps-0 d-flex align-items-center gap-2 border rounded p-2 bg-white">
                        <InputCheckbox id="chkActive" class="form-check-input ms-2" @bind-Value="model.Active" />
                        <label class="form-check-label fw-bold @(model.Active ? "text-success" : "text-secondary")" for="chkActive">
                            @(model.Active ? "Producto Activo (En Venta)" : "Producto Desactivado")
                        </label>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3 mb-0 py-2 small">@errorMessage</div>
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light text-muted border" @onclick="Close">Cancelar</button>
                    <button type="submit" class="btn btn-primary px-4 fw-bold" disabled="@isLoading">
                        @if (isLoading) { <span>Guardando...</span> } else { <span>Guardar</span> }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}